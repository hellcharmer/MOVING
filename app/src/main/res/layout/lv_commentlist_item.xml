<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_commentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3198FD"
        android:textSize="14dp"
        android:text="某某A"
        android:paddingBottom="6dp"/>
    <TextView
        android:id="@+id/replayorcomment"
        android:layout_toRightOf="@+id/tv_commentname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#000000"
        android:text="  回复  "/>
    <TextView
        android:id="@+id/tv_replayname"
        android:layout_toRightOf="@+id/replayorcomment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3198FD"
        android:textSize="14dp"
        android:text="某某B"
        android:paddingBottom="6dp"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_toRightOf="@+id/tv_replayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:textColor="#000000"
        android:text="  内容"/>

</RelativeLayout>
