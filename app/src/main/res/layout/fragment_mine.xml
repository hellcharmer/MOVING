<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0f0f0"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/rv_head0"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorSkybule">

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_below="@+id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="韩锦"
                android:textColor="#f1ecec"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:gravity="center" />
            <com.example.charmer.moving.MyView.CircleImageView
                android:id="@+id/iv_head"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/morentouxiang"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
            <RelativeLayout
                android:id="@+id/ib_qrcode"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                >
            <ImageView
                android:src="@drawable/ib_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
            </RelativeLayout>
            <TextView
                android:id="@+id/edit_personalinfo"
                android:background="@drawable/textview_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/white"
                android:text="个人资料"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_view"
            android:layout_below="@id/rv_head0"
            android:layout_width="match_parent"
            android:layout_height="0px"
            />
        <View
            android:id="@+id/v_head1"
            android:layout_below="@id/rv_head0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f9f5f5"
            android:layout_marginTop="9dp"/>
        <RelativeLayout
            android:layout_below="@id/v_head1"
            android:id="@+id/person_rl_articles"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/articles"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/articles"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@id/articles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"
                android:text="文 章"
                android:textColor="#212121"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/iv_enter1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/enter1"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_footer1"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ccc"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/person_rl_articles"
            />
        <View
            android:id="@+id/v_head2"
            android:layout_below="@id/v_footer1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f9f5f5"
            />
        <RelativeLayout
            android:layout_below="@id/v_head2"
            android:id="@+id/person_rl_dynamic"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/iv_dynamic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/dynamic"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@id/iv_dynamic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"
                android:text="动 态"
                android:textColor="#212121"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/iv_enter2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/enter1"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_footer2"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ccc"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/person_rl_dynamic"
            />
        <View
            android:id="@+id/v_head3"
            android:layout_below="@id/v_footer2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f9f5f5"
            />
        <RelativeLayout
            android:layout_below="@id/v_head3"
            android:id="@+id/person_rl_exercise"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff">

            <TextView
                android:layout_toRightOf="@+id/iv_exercise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"
                android:text="活 动"
                android:textColor="#212121"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/iv_enter3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/enter1"/>

            <ImageView
                android:id="@+id/iv_exercise"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/exercise"
                android:layout_marginLeft="13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="13dp" />
        </RelativeLayout>
        <View
            android:id="@+id/v_footer3"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ccc"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/person_rl_exercise"
            />


        <View
            android:id="@+id/v_head4"
            android:layout_below="@id/v_footer3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f9f5f5"
            />
        <RelativeLayout
            android:layout_below="@id/v_head4"
            android:id="@+id/person_rl_shoucang"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/shoucang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/shoucang_mine"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@id/shoucang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"
                android:text="收 藏"
                android:textColor="#212121"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/iv_enter4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/enter1"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_footer4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/person_rl_shoucang"
            />

        <View
            android:id="@+id/v_head5"
            android:layout_below="@id/v_footer4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f9f5f5"
            android:layout_marginTop="9dp"/>
        <RelativeLayout
            android:layout_below="@id/v_head5"
            android:id="@+id/person_rl_fankui"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/feedback"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/feedback"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"
                android:text="反 馈"
                android:textColor="#212121"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/iv_enter5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/enter1"/>
        </RelativeLayout>
        <View
            android:id="@+id/v_footer5"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ccc"
            android:layout_marginLeft="40dp"
            android:layout_below="@id/person_rl_fankui"
            />

        <View
            android:id="@+id/v_head6"
            android:layout_below="@id/v_footer5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f9f5f5"
            />

        <View
            android:id="@+id/v_footer6"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ccc"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/person_rl_about"
            />

        <RelativeLayout
            android:id="@+id/person_rl_about"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#ffffff"
            android:layout_below="@+id/v_footer5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <ImageView
                android:id="@+id/about"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/about"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_centerVertical="true"
                android:text="关 于"
                android:textColor="#212121"
                android:textSize="16sp"/>
            <ImageView
                android:id="@+id/iv_enter6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/enter1"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_qrcode"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
       >
      <RelativeLayout
          android:layout_centerInParent="true"
          android:background="@color/white"
          android:layout_width="300dp"
          android:layout_height="400dp">
        <ImageView
            android:id="@+id/myqrcode"

            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
      </RelativeLayout>
        </RelativeLayout>

</FrameLayout>