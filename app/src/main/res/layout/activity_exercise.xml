<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/app_icon"

                />

            <TextView
                android:id="@+id/publisherId"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_below="@id/userImage"
                android:paddingTop="5dp"
                android:text="@string/publisherName"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:background="@drawable/contentframe"
            >

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/type"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="4dp"
                />
            <TextView
                android:id="@+id/theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theme"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:layout_alignTop="@id/type"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:id="@+id/addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/addr"
                android:layout_below="@id/type"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/place"
                android:textSize="18sp"
                android:layout_below="@id/type"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/addr"
                />
            <ImageView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/time"
                android:layout_below="@id/place"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/activityTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activityTime"
                android:textSize="18sp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/place"
                android:layout_toRightOf="@id/time"
                />

            <ImageView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/account"
                android:layout_below="@id/activityTime"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
            <TextView
                android:id="@+id/currentNumberdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currentNumberdesc"
                android:textSize="18sp"
                android:layout_below="@id/activityTime"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/account"
                />
            <TextView
                android:id="@+id/currentNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/currentNumber"
                android:textSize="18sp"
                android:layout_below="@id/activityTime"
                android:layout_toRightOf="@id/currentNumberdesc"
                android:layout_marginLeft="5dp"
                />


        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
