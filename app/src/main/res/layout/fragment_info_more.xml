<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_photoImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/friends_selected"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_infoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ellen"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/iv_photoImg"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_infoContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我们爱运动我们爱运动"
        android:layout_toRightOf="@id/iv_photoImg"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="#000000"
        android:layout_below="@+id/tv_infoName"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_imgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.charmer.moving.MyView.GridView_picture
            android:id="@+id/gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:numColumns="3"
            android:stretchMode="columnWidth"
            android:columnWidth="90dp"
            >
        </com.example.charmer.moving.MyView.GridView_picture>
        <!--<GridView-->
            <!--android:id="@+id/gridview"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:numColumns="auto_fit"-->
            <!--android:columnWidth="90dp"-->
            <!--android:stretchMode="columnWidth"-->
            <!--android:verticalSpacing="10dp"-->
            <!--android:horizontalSpacing="10dp"-->
            <!--android:gravity="center">-->
        <!--</GridView>-->
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_imgs">
        <TextView
            android:id="@+id/tv_infoDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:32"
            android:textColor="#a9b7b7"
            android:padding="7dp"
            android:layout_marginLeft="20dp"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="25dp"
            android:src="@drawable/remarkinfo"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="220dp"
            android:layout_toRightOf="@+id/tv_infoDate"            />
        <CheckBox
            android:id="@+id/iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            style="@style/dizan_checkbox"
            android:background="@drawable/dizan_selector"
            android:layout_marginLeft="330dp" />
        <TextView
            android:id="@+id/tv_likeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_like"
            android:padding="7dp"
            android:text="201"/>
    </RelativeLayout>


</LinearLayout>
