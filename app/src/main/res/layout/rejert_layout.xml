<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="100dp">
    <RelativeLayout
        android:id="@+id/rlpost1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/agreeshape"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_agree"
            android:layout_centerVertical="true"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:text=""
            android:ellipsize="end"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btnagree"
            android:id="@+id/tv_agree2"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:text="确定"
            android:textColor="#fff"
            android:gravity="center"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rlpost2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rejertshape"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_agree3"
            android:layout_centerVertical="true"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:text=""
            android:ellipsize="end"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btnrejert"
            android:id="@+id/tv_agree4"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:text="确定"
            android:textColor="#5000"
            android:gravity="center"
            />
    </RelativeLayout>

</RelativeLayout>
