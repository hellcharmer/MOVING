<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_creatqun2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.charmer.moving.friendchat.Creatqun2"
    android:background="#d0d0d0"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/qunname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="群名称："
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            />
        <EditText
            android:id="@+id/edqun"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/qunname"
            android:layout_alignBottom="@id/qunname"
            android:textSize="25dp"
            android:background="@drawable/searchshape"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/jiatu"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/jiatu"
        />
       <TextView
           android:id="@+id/tiao"
           android:layout_width="match_parent"
           android:layout_height="30dp"
           android:layout_below="@id/jiatu"
           android:text="添加一张群图片"
           android:gravity="center"
           android:textSize="25dp"
           />
        <ImageView
            android:layout_marginTop="30dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/tiao"
            android:id="@+id/chuangqun"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/chuangqun"
        android:layout_alignBottom="@id/chuangqun"
        android:layout_marginLeft="30dp"
        android:text="取消创建"
        android:textSize="30dp"
        android:id="@+id/tv_cancelqun"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_createqun1"
        android:layout_toRightOf="@id/tv_cancelqun"
        android:layout_alignBottom="@id/tv_cancelqun"
        android:text="选择完成"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:id="@+id/success"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/tv_createqun1"
        android:layout_alignBottom="@id/tv_createqun1"
        android:layout_marginBottom="20dp"
        android:src="@drawable/confirm"
        android:layout_marginLeft="-10dp"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_createqun1"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_createqun2"
        android:layout_centerHorizontal="true"
        android:text="完成创建"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:enabled="false"
        />
    </RelativeLayout>
</RelativeLayout>
