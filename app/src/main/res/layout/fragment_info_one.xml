<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/themeblue">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/remarkmoreback"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/rb_guys"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:text="详情"
            android:textSize="18sp"
            android:textColor="#fff">
        </TextView>

    </RelativeLayout>
    <ScrollView
        android:layout_below="@id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_photoImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/friends_selected"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/tv_infoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ellen"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/iv_photoImg"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/tv_infoContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我们爱运动我们爱运动"
            android:layout_toRightOf="@id/iv_photoImg"
            android:lines="2"
            android:ellipsize="end"
            android:textColor="#000000"
            android:layout_below="@+id/tv_infoName"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_imgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.example.charmer.moving.view.NineGridTestLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:sapcing="4dp"
            />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rl_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_imgs">
        <TextView
            android:id="@+id/tv_infoDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:32"
            android:textColor="#a9b7b7"
            android:padding="7dp"
            android:layout_alignParentLeft="true"/>
        />
        <CheckBox
            android:id="@+id/iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            style="@style/dizan_checkbox"
            android:layout_marginLeft="315dp" />
        <TextView
            android:id="@+id/tv_likeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="7dp"
            android:textColor="#000"
            android:text="201"/>
    </RelativeLayout>

        <com.example.charmer.moving.MyView.MyListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_commentlist"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </com.example.charmer.moving.MyView.MyListView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout">
        <EditText
            android:id="@+id/input_comment"
            android:layout_weight="1"
            android:hint="评论"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="14dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="35dp"
            android:background="@drawable/bg_input_comment"
            android:focusable="false"
             android:clickable="true"
            />
        <TextView
            android:id="@+id/btn_publish_comment"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="发表"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:background="#af0099ff"
            android:gravity="center"
            />
    </LinearLayout>

</RelativeLayout>

