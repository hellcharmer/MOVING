<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_margin="10dp"
        android:id="@+id/iv_searchresult_picture"
        android:src="@drawable/nopicture1"
        android:layout_width="80dp"
        android:layout_height="80dp"

        />
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_searchresult_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLines="2"
        android:text="题目"
        android:layout_toRightOf="@id/iv_searchresult_picture"
        android:layout_alignTop="@id/iv_searchresult_picture"/>
    <TextView
        android:id="@+id/tv_searchresult_tg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:textColor="@color/text_gray"
        android:text="XXXXXXXXX"
        android:layout_toRightOf="@id/iv_searchresult_picture"
        android:layout_alignBottom="@+id/iv_searchresult_picture"
        android:layout_marginBottom="5dp"
        />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类型"
        android:textColor="@color/text_gray"
        android:layout_marginRight="18dp"
        android:layout_alignTop="@+id/iv_searchresult_picture"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:id="@+id/tv_searchresult_type" />
</RelativeLayout>
